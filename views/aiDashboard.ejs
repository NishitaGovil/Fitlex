  <% 
    const completed = weeklyPlan.filter(d => d.completed).length;
  %>

  <div class="progress">
    âœ… Progress: <%= completed %> / 7 days completed
  </div>

  <form action="/save-progress" method="POST">

    <% weeklyPlan.forEach(day => { %>
      <div class="day-card">
        <div class="workout">
          <strong><%= day.day %></strong><br>
          <%= day.workout %>
        </div>

        <div>
          <input 
            type="checkbox"
            name="completedDays[]"
            value="<%= day.day %>"
            <%= day.completed ? "checked" : "" %>
          >
        </div>
      </div>
    <% }) %>

    <button type="submit">Save Progress</button>
  </form>

